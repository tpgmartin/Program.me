<% @title="Contacts" %>

<%= render :partial => '/submenu' %>

<div class="page-header" ><h1>Contacts</h1></div>

<ul style="list-style-type: none">
  <% for relationship in @user.relationships %>
    <li>
      <% if relationship.relation %>
      <%= relationship.relation.full_name %>
      (<%= link_to "remove", relationship, :method => :delete %>)
      <% end %>
    </li>
  <% end %>
</ul>

<h2>Contacted by Users</h2>
<ul style="list-style-type: none">
  <% for user in @user.inverse_relations %>
    <li><%= user.full_name  %></li>
  <% end %>
</ul>

<%= link_to t('.index', :default => t("Find Contacts")), users_path,:class => 'btn btn-primary' %>
