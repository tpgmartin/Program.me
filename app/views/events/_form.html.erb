<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <!-- <legend><%= controller.action_name.capitalize %> Event</legend> -->

  <%= f.input :name %>
  <%= f.input :description %>

  <!-- <#% if @contacts %>     -->
  <div class="control-group required event_recipient_email" style="margin-left: 100px">
    Recipient &nbsp;&nbsp;&nbsp;
    <%= f.collection_select :recipient_email, @contacts, :email, :full_name, include_blank: true  %>
  </div>
  <!-- <#% end %> -->

  <%= f.input :date, as: :datepicker %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    events_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>


