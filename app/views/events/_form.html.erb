<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <!-- <legend><%= controller.action_name.capitalize %> Event</legend> -->

  <%= f.input :name %>
  <%= f.input :description %>
  
  <div class="control-group required event_recipient_email">
    <%= f.collection_select :recipient_email, User.order(:id), :email, :full_name, include_blank: true  %>
  </div>
 <!--  <#%= f.input :recipient_email, collection: User.order(:id), as: :grouped_select, group_method: :email %> -->


  <%= f.input :date, as: :datepicker %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    events_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>


